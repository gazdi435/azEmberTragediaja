<UserControl x:Class="Pizza.SignIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="WhiteSmoke">
    <Grid Width="800" Height="450">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Label Content="Sign In Page"/>
        <StackPanel Grid.Row="1">
            <Label Content="Regisztráció" Grid.Row="1" FontSize="30" HorizontalAlignment="Center" Margin="0 10 0 40"/>
            <Label Content="Név"/>
            <Label Content="Email cím:" HorizontalAlignment="Center"/>
            <TextBox x:Name="emailTXTB" Width="150" Margin="0 5 0 20"/>
            <Label Content="Szállítási cím"/>
            <Label Content="Te le fonszám"/>

            <Label Content="Jelszó:" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="pswB" Width="150" HorizontalAlignment="Center" Margin="0 5 0 40"/>

            <Button Content="Bejelentkezés" Width="100" Click="Button_Click_1"/>


            <TextBlock FontSize="10" Margin="0 20" HorizontalAlignment="Center" Foreground="Blue" PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown">
            Még nincsen fiókod? Regisztrálj!
            </TextBlock>
        </StackPanel>


    </Grid>
</UserControl>
