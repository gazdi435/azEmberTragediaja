<UserControl x:Class="Pizza.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="WhiteSmoke">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        
        <Label Content="Login Page"/>
        <StackPanel Grid.Row="1">
            <Label Content="Bejelentkezés" Grid.Row="1" FontSize="30" HorizontalAlignment="Center" Margin="0 10 0 40"/>
            <Label Content="Felhasználónév:" HorizontalAlignment="Center"/>
            <TextBox x:Name="felhasznalonevTSTB" Width="150" Margin="0 5 0 20"/>
            
            <Label Content="Jelszó:" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="pswB" Width="150" HorizontalAlignment="Center" Margin="0 5 0 40"/>

            <Button Content="Bejelentkezés" Width="100" Click="Button_Click"/>
            
            <Label Content="Még nincsen fiókod? Regisztrálj!" FontSize="10" Margin="0 20" HorizontalAlignment="Center" Foreground="Blue"/>
        </StackPanel>
       

    </Grid>
</UserControl>
